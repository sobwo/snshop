<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myteam.myapp.persistance.MemberService_Mapper">
	<insert id="memberInsert" parameterType="mv">
		INSERT INTO member(memberNo,memberId,memberPw,memberName,memberPhone,memberEmail,memberGender)
		VALUES(midx_seq.nextval,#{memberId},#{memberPw},#{memberName},#{memberPhone},#{memberEmail},#{memberGender})
	</insert>
		
	<select id="memberIdCheck" parameterType="String">
		SELECT COUNT(*) FROM MEMBER WHERE MEMBERID=#{memberId}
	</select>
</mapper>