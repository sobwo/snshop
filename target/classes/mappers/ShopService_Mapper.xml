<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myteam.myapp.persistance.ShopService_Mapper">
	<sql id="searchCategory">
		<choose>
			<when test="value==0">
				order by goodsNo desc 
			</when>
			<when test="value==1">
				where category in 
				<foreach collection="filter" item="item" separator="," open="(" close=")">
					#{item}
				</foreach>
			</when>
		</choose>
	</sql>
	<select id="goodsSelectAll" resultType="gv">
		select * from goods order by goodsNo desc 
	</select>
	
	<select id="goodsSelectOne" parameterType="int" resultType="gv">
		select * from goods where goodsNo = #{goodsNo}
	</select>
	
	<select id="imgSelectAll" resultType="piv">
		select imgfileName,a.goodsNo from productimg a inner join (select goodsNo,min(imgNo) as imgNo from productimg group by goodsNo) b on a.imgNo = b.imgNo order by a.goodsNo desc
	</select>
	
	<select id="imgSelectOne" parameterType="int" resultType="piv">
		select * from productimg where goodsNo = #{goodsNo} order by imgNo asc
	</select>
	
	<select id="filterList" parameterType="java.util.List" resultType="gv">
		select * from goods 
		<include refid="searchCategory"></include>
	</select>
</mapper>